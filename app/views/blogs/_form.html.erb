<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      # バリテーションのエラーの件数を表示
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      
      <ul>
        # @blog.errorsは@blogをバリテーションした際のエラー情報
        # full_messagesは複数のエラーメッセージを表す
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<%= link_to "ブログ一覧画面に戻る", blogs_path %>