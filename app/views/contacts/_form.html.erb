<%= form_for(@contact, url: choose_new_or_edit_contacts) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
      
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :お名前 %>
  <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control', placeholder: "お問い合わせ内容" %>
  <br>
  <%= f.submit 'お問い合わせ', class: 'btn btn-primary btn-block' %>
<% end %>
